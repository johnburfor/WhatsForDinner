
<h1>@ViewBag.title</h1>

<form method="post">

    @foreach (var recipe in ViewBag.recipes)
    {
        <input type="checkbox" name="recipeIds" id="@recipe.ID" value="@recipe.ID" />
        <label for="@recipe.ID">@recipe.Name</label>
        <br />
    }

    <input type="submit" class="btn btn-primary" value="Remove Selected Recipe(s)" />

</form>
<br />
<div>
    <a asp-action="Index">Back to List</a>
</div>