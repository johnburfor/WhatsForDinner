@{
    ViewData["Title"] = "Add";
}

@model WhatsForDinner.ViewModels.AddRecipeViewModel

<h1>Add Recipe</h1>

<form asp-controller="Recipe" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" required="required" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ingredients"></label>
        <textarea class="form-control" required="required" rows=5 asp-for="Ingredients"></textarea>
        <span asp-validation-for="Ingredients"></span>
    </div>

    <div class="form-group">
        <label asp-for="Directions"></label>
        <textarea class="form-control" required="required" rows=5 asp-for="Directions"></textarea>
        <span asp-validation-for="Directions"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating"></label>
        <select class="selectpicker" asp-for="Rating">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
        <span asp-validation-for="Rating"></span>
    </div>

    <input type="submit" class="btn btn-primary" value="Add Recipe" />

</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>